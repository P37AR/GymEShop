@using Microsoft.AspNetCore.Identity
@inject SignInManager<GymEShop.DomainIdentity.EShopApplicationUser> SignInManager
@inject UserManager<GymEShop.DomainIdentity.EShopApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" style="color: crimson" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-outline-danger">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-outline-info" asp-controller="account" asp-action="Register">Register</a>
        </li>

        <li class="nav-item">
            <a class="btn btn-outline-success" asp-controller="account" asp-action="login">Login</a>
        </li>
    }
</ul>
