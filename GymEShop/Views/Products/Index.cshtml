@model List<GymEShop.Domain.Domain.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Products" asp-action="Create">Add New Product</a>
    </div>


    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
        }

        <div class="col-md-3 m-4">
            <div class="card" style="width: 18rem; height: auto ">
                <img class="card-img-top" src="@item.ProductImage" alt="Image For Product" />
                <div class="card-body">
                    <h5 class="card-title">@item.ProductName</h5>
                    <p class="card-text">@item.ProductDescription</p>
                    <p class="card-text" style="font-weight: bold;">@item.Price $</p>
                    <a asp-controller="Products" class="btn btn-outline-primary" asp-route-id="@item.Id" asp-action="AddProductToCard">Add</a>
                    <a asp-controller="Products" asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.Id">Edit</a>
                    <a asp-controller="Products" class="btn btn-danger" asp-route-id="@item.Id"
                       asp-action="Delete">Delete</a>
                </div>
            </div>
        </div>

        if (i % 3 == 2)
        {
            @:</div>
        }
    }
</div>